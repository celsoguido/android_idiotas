<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/crime_content_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
		android:layout_toLeftOf="@+id/crime_list_item_solved_checkbox"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/crime_list_item_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/crime_list_item_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />

    </LinearLayout>

    <CheckBox
        android:id="@id/crime_list_item_solved_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/crime_content_linear_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:padding="4dp" />

</RelativeLayout>